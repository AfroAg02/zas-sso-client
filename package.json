{
  "name": "zas-sso-client",
  "version": "1.2.23",
  "description": "Paquete SSO para Next.js con autenticación basada en tokens, manejo de sesión en cookies cifradas, refresco automático y control de permisos.",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["dist", "README.md"],

  "scripts": {
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run typecheck && npm run build"
  },

  "keywords": ["sso", "auth", "nextjs", "react", "cookies", "jwt", "permissions"],

  "author": "AfroAg02",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AfroAg02/zas-sso-client.git"
  },

  "peerDependencies": {
    "react": ">=18 <20",
    "react-dom": ">=18 <20",
    "next": ">=13 <17",
    "jose": "^6.1.3",
    "@tanstack/react-query": "^5.90.12"
  },

  "devDependencies": {
    "typescript": "^5.9.3",
    "@types/react": "^19.2.7",
    "@types/node": "^25.0.0",
    "next": "^16.0.8",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "jose": "^6.1.3",
    "@tanstack/react-query": "^5.90.12"
  },

  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./edge": {
      "types": "./dist/edge.d.ts",
      "import": "./dist/edge.js"
    },
    "./README.md": "./README.md",
    "./package.json": "./package.json"
  },

  "sideEffects": false
}
