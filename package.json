{
  "name": "zas-sso-client",
  "version": "1.1.6",
  "description": "Paquete SSO para Next.js con autenticación basada en tokens, manejo de sesión en cookies cifradas, refresco automático y control de permisos.",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run typecheck && npm run build"
  },
  "keywords": [
    "sso",
    "auth",
    "nextjs",
    "react",
    "cookies",
    "jwt",
    "permissions"
  ],
  "author": "AfroAg02",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AfroAg02/zas-sso-client.git"
  },
  "dependencies": {
    "jose": "^5.2.0",
    "@tanstack/react-query": "^5.17.15"
  },
  "peerDependencies": {
    "react": ">=18 <19",
    "react-dom": ">=18 <19",
    "next": ">=13 <16",
    "jose": "^5.2.0",
    "@tanstack/react-query": "^5.17.15"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/react": "^18.2.0",
    "@types/node": "^20.0.0",
    "next": "15.3.2",
    "react": "^18.0.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./edge": {
      "types": "./dist/edge.d.ts",
      "import": "./dist/edge.js"
    },
    "./README.md": "./README.md",
    "./package.json": "./package.json"
  },
  "sideEffects": false
}
